        <div>

                                <% camp.comment.forEach( function(data) {%>
                            
                                    <div style="font-family: 'Yanone Kaffeesatz', sans-serif;"><strong><%= data.author %></strong></div>
                                    <div class="mb-3" style="font-family: 'Gloria Hallelujah', cursive;"><%= data.text %></div>
                                <% }) %>

        </div>

        </div
    
    
    </div>    
        
