<%- include ("./partials/header")  %>

       
        <div class="container">
                         


            <div class="jumbotron py-4 mb-5 mt-3">
                <h1 class="display-5 my-3">Welcome to YelpCamp!</h1>
                <p>Select the best campgrounds from all over the world.</p>
                <a class="btn btn-danger btn-sm" href="/campgrounds/new" role="button">App a Campground!</a>
              </div>
           


            <div class="row" >
                     <% allcampgrounds.forEach(function(value){  %>
                        <div class="col-lg-4 col-md-6 col-xl-4 ">
                       <div class="card mx-0 mb-5" style="">
                                     <img  style="height: 200px; object-fit: cover;" src="<%= value.img_url %>" class="shadow p-1  bg-white rounded card-img-top"  alt="...">
                              <div class="card-body">
                                  <p class="card-text text-wrap"><strong><%= value.name %></strong></p>
                              <a href="campgrounds/<%= value._id %>" class="btn btn-outline-success btn-sm" style="display: inline;" role="button">More Info</a>

                              </div>
                         </div>
                        </div>
                  <%  })  %> 
            </div>



        </div>           
    
    
    
<%- include ("./partials/footer")  %>
